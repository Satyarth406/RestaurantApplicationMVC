@model Restaurant
@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        Create Restaurant
    </div>
    <div class="card-body">
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
            </div>

            <div class="form-group">
                <label asp-for="Cuisine">Cuisine</label>
                <select class="form-control" asp-for="Cuisine"
                        asp-items="ViewBag.Cuisines">
                    <option value="">Select a cuisine</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="City">City</label>
                <input type="text" class="form-control" asp-for="City" placeholder="City">
            </div>
            <div class="form-group">
                <label asp-for="Country">Country</label>
                <input type="text" class="form-control" asp-for="Country" placeholder="Country">
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="DineIn">
                <label class="form-check-label" asp-for="DineIn">
                    Dine In
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" class="btn btn-secondary">All Restaurants</a>
        </form>
    </div>
</div>

